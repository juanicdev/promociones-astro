---
export interface Props {
    title: string;
    body: string;
}

const { title, body } = Astro.props;
---

<div class="hero-edu">
    <div class="hero-edu-text">
        <h1>{title}</h1>
        <p>{body}</p>
    </div>
</div>

<style>
    .hero-edu-text p {
        font-weight: 300;
    }
    .edu-box-right {
        text-align: center;
        display: flex;
        align-items: center;
        background-position: center;
        background-size: cover;
    }
    .hero-edu {
        background-image: url("https://static.lenovo.com/las/2022/edu/new-brand/beneficios/bg.png");
        background-position: initial;
        height: 300px;
        align-items: center;
        display: flex;
    }
    .hero-edu-text {
        margin: 0 auto;
        text-align: center;
        color: #fff;
        font-size: 28px;
        width: 68%;
    }
    h1 {
        color: #fff;
        line-height: initial;
        font-weight: 500;
    }
    h3 {
        font-size: 2em;
        color: #000;
    }
    
    .img-mobile {
        display: none;
    }
    .edu-text {
        width: 25%;
        text-align: center;
        color: #000;
    }
    .edu-text > a {
        background-color: #4090d4;
        padding: 10px 50px;
        color: #fff;
        border-radius: 4px;
        text-transform: uppercase;
    }
    .edu-text > a:hover {
        background-color: #949494;
    }

    @media (max-width: 1200px) {
        h3 {
            font-size: 26px;
        }
        h1 {
            font-size: 25px;
        }

        .hero-edu {
            height: 300px;
        }
        .hero-edu-text {
            width: 95%;
            font-size: 22px;
        }
        .hero-edu-text p {
            font-size: 16px;
        }
        .edu-box {
            display: block;
            margin-bottom: 30px;
        }
        .edu-text {
            width: 90%;
            margin: auto;
            margin-top: -40px;
        }

        .img-mobile {
            display: block;
        }
        .edu-text {
            color: #000 !important;
        }
        .amazon h3 {
            color: #000 !important;
        }
    }
</style>
